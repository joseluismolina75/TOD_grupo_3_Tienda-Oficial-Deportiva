<!DOCTYPE html>
<html lang="es">

<%- include('partials/head', { title: 'Página de inicio' , stylesheet: ['/css/styles.css']}) %>

  <body>
    <%- include('partials/header') %>
      <main>



        <!-- ultima visita -->
        <div class="container products-wrapper">
          <div class="row">
            <div class="col-12">
              <h2 class="products-title">Basado en tu última visita</h2>
            </div>
            <!-- Show the "visited" products -->
            <div class="col-12 col-sm-6 col-lg-3">

              <% visited.forEach(product=> { %>
                <section class="product-box">
                    <a href='/products/detail/<%= product.id %>' class=""> <img src="img/products/<%= product.image %>"
                        width="100%" height="300px"></a>

                    <article>
                      <p class="name">
                        <%= product.name %>
                      </p>
                      <p class="category">
                        <%= product.category %>
                      </p>
                      <h2 class="price">$<%= product.price %>
                      </h2>
                      <span>
                        <%= product.discount %> % OFF
                      </span>
                      <p>
                      <p class="description">
                        <%= product.description %>
                      </p>
                      <p class="colors">
                        <%= product.colors %>
                      </p>
                    </article>
                    <i class="fas fa-truck"></i>
                </section>
                <% }) %>
            </div>
          </div>
        </div>
        <!-- /ultima visita -->


			<!-- Ofertas -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Ofertas</h2>
					</div>
					<!-- Show the "in-sale" products -->
					<div class="col-12 col-sm-6 col-lg-3">
						<% inDiscount.forEach(product=> { %>
							<section class="product-box">
								<a href="/products/detail/<%= product.id %>">
									<figure class="product-box_image">
										<img src="/images/products/<%= product.image %>" alt="imagen de producto">
									</figure>
									<article class="product-box_data">
										<h2>$<%= product.price %>
										</h2>
										<span>
											<%= product.discount %> % OFF
										</span>
										<p>
											<%= product.name %>
										</p>
										<i class="fas fa-truck"></i>
									</article>
								</a>
							</section>
							<% }) %>
					</div>
				</div>
			</div>
			<!-- /Ofertas -->

      </main>
      <%- include('partials/footer') %>

  </body>

</html>